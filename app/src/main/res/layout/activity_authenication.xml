<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <RelativeLayout
        android:id="@+id/setting_server"
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <EditText
            android:id="@+id/port"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:hint="65000"
            android:text="80"/>
        <TextView
            android:id="@+id/sep"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text=":"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="30sp"
            android:layout_toLeftOf="@id/port" />
        <EditText
            android:id="@+id/ip"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/sep"
            android:hint="socket.example.com"
            android:singleLine="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/first"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/corner"
            android:text="send\nNotice"/>
        <TextView
            android:id="@+id/first_text"
            android:layout_width="fill_parent"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/first"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:text="1244012"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/first_receive"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/second"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/corner"
            android:text="send\nHash"/>
        <TextView
            android:id="@+id/second_text"
            android:layout_width="fill_parent"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/second"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:text="1244012"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/second_receive"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"/>

</LinearLayout>